	<profiles>
		<profile>
			<id>production</id>
			<activation>
				<property>
					<name>env.MAVEN_WORKING_MODE</name>
					<value>production</value>
				</property>
			</activation>
			<properties>
				<env>production</env>
			</properties>
		</profile>
		<profile>
			<id>development</id>
			<activation>
				<activeByDefault>true</activeByDefault>
				<property>
					<name>env.MAVEN_WORKING_MODE</name>
					<value>development</value>
				</property>
			</activation>
			<properties>
				<env>development</env>
			</properties>
		</profile>
		<profile>
			<id>ci</id>
			<properties>
				<env>ci</env>
			</properties>
		</profile>
		<profile>
			<id>exewar</id>
			<activation>
				<property>
					<name>env.MAVEN_WORKING_MODE</name>
					<value>exewar</value>
				</property>
			</activation>
			<properties>
				<env>exewar</env>
			</properties>
		</profile>		
		<profile>
			<id>windows</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<properties>
				<env>windows</env>
			</properties>
		</profile>
