			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.6</version><!--$NO-MVN-MAN-VER$ -->
				<executions>
					<execution>
						<phase>prepare-package</phase>
						<configuration>
							<target>
								<taskdef resource="net/sf/antcontrib/antcontrib.properties"
									classpathref="maven.plugin.classpath" />
								<if>
									<available file="${project.build.directory}/derby/sql" type="dir" />
									<then>
										<replaceregexp byline="true">
										  <regexp pattern="^SET.*$"/>
										  <substitution expression=""/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>
										
										<replaceregexp byline="true">
										  <regexp pattern="^REVOKE.*$"/>
										  <substitution expression=""/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>
										
										<replaceregexp byline="true">
										  <regexp pattern="^GRANT.*$"/>
										  <substitution expression=""/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>																	
										
										<replaceregexp byline="true">
										  <regexp pattern="ALTER TABLE ONLY"/>
										  <substitution expression="ALTER TABLE"/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>
										
										<replaceregexp byline="true">
										  <regexp pattern="CREATE PROCEDURAL LANGUAGE plpgsql;"/>
										  <substitution expression=""/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>
										
										<replaceregexp byline="true">
										  <regexp pattern="character varying "/>
										  <substitution expression="LONG VARCHAR "/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>
										
										<replaceregexp byline="true">
										  <regexp pattern="character varying,"/>
										  <substitution expression="LONG VARCHAR,"/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>
										
										<replaceregexp byline="true">
										  <regexp pattern="character varying$"/>
										  <substitution expression="LONG VARCHAR"/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>
										
										<replaceregexp byline="true">
										  <regexp pattern=" USING btree"/>
										  <substitution expression=""/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>
										
										<replaceregexp byline="true">
										  <regexp pattern="timestamp without time zone"/>
										  <substitution expression="timestamp"/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>
										
										<replaceregexp byline="true">
										  <regexp pattern="DEFAULT ''::LONG VARCHAR NOT NULL"/>
										  <substitution expression="NOT NULL WITH DEFAULT ''"/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>										
										
										<replaceregexp byline="true">
										  <regexp pattern='"char",'/>
										  <substitution expression="CHAR(2),"/>
										  <fileset dir="${project.build.directory}/derby/sql">
										    <include name="*.sql"/>
										  </fileset>
										</replaceregexp>										
										
									</then>
								</if>
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
